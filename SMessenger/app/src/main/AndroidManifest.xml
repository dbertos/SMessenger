<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nottingham.messenger">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.nottingham.messenger.activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.Trans"></activity>
        <activity
            android:name="com.nottingham.messenger.activities.ConversationActivity"
            android:theme="@style/AppTheme.Trans"></activity>
        <activity
            android:name="com.nottingham.messenger.activities.NewConversationActivity"
            android:theme="@style/AppTheme.Trans"></activity>
        <activity
            android:name="com.nottingham.messenger.activities.SetupPasswordActivity"
            android:theme="@style/AppTheme.Trans"></activity>
        <activity
            android:name="com.nottingham.messenger.activities.VerifyPasswordActivity"
            android:theme="@style/AppTheme.Trans"></activity>
        <activity
            android:name="com.nottingham.messenger.activities.SplashActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.Trans">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.nottingham.messenger.services.SecureConversationEstablishmentListener" />

    </application>

    <receiver
        android:name=".SmsReceiver"
        android:enabled="true"
        android:exported="true">
        <intent-filter android:priority="999">
            <action android:name="android.provider.Telephony.SMS_RECEIVED" />
        </intent-filter>
    </receiver>

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
</manifest>